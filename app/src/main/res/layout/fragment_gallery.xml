<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dip"
    tools:context=".ui.fragments.upload.GalleryFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="265dp"
        android:background="@drawable/roundcorner"
        android:padding="3dip"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="74dp"
        android:layout_height="222dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundcorner"
        android:checkedButton="@id/buttonHead"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/buttonHead"
            android:layout_width="75dp"
            android:layout_height="73dp"
            android:background="@drawable/button_head"
            android:button="@null" />

        <RadioButton
            android:id="@+id/buttonUpper"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:background="@drawable/button_upper"
            android:button="@null" />

        <RadioButton
            android:id="@+id/buttonLower"
            android:layout_width="75dp"
            android:layout_height="73dp"
            android:background="@drawable/button_lower"
            android:button="@null" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/optionsRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorner"
        android:orientation="vertical"
        android:padding="3dip"
        app:layout_constraintBottom_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@+id/radioGroup2"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.4">

        <RadioButton
            android:id="@+id/option1RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text="Opci贸n 1"
            android:textColor="@color/material_dynamic_neutral10" />

        <RadioButton
            android:id="@+id/option2RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text="Opci贸n 2"
            android:textColor="@color/material_dynamic_neutral10" />

        <RadioButton
            android:id="@+id/option3RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text="Opci贸n 3"
            android:textColor="@color/material_dynamic_neutral10" />

        <RadioButton
            android:id="@+id/option4RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text="Opci贸n 4"
            android:textColor="@color/material_dynamic_neutral10" />
    </RadioGroup>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/roundcorner"
        android:ems="10"
        android:inputType="text"
        android:padding="3dip"
        android:text="ClotheName"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_neutral10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />

</androidx.constraintlayout.widget.ConstraintLayout>