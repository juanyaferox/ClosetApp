<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo transparente -->
    <item android:drawable="@android:color/transparent" />
    <!-- Borde alrededor de la imagen -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fondo transparente -->
            <stroke
                android:width="4dp"
                android:color="@color/black" /> <!-- Color del borde -->
            <corners android:radius="12dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
    <!-- Imagen -->
    <item android:drawable="@drawable/clothes" />
</layer-list>